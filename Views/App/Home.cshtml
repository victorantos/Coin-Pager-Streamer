<div class="container">
    <table class="table table-striped" style="cursor:pointer;">
        <thead>
            <tr>
                <th>From</th>
                <th>To</th>
                <th>Message</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="item in items" ng-click="goToDetails(item.from)">
                <td>{{item.from}}</td>
                <td>{{item.to}}</td>
                <td>{{item.message}}</td>
            </tr>
        </tbody>
    </table>

   
    <h2>Real time messages on the blockchain</h2>
    <p><i>(Sample data below)</i></p>
    <div id="stockTable">
        <table border="1">
            <thead>
                <tr><th>Symbol</th><th>Price</th><th>Open</th><th>High</th><th>Low</th><th>Change</th><th>%</th></tr>
            </thead>
            <tbody>
                <tr class="loading"><td colspan="7">loading...</td></tr>
            </tbody>
        </table>
    </div>
    <input type="button" id="open" value="Scan the blockchain" />
    <input type="button" id="close" value="Stop" disabled="disabled" />
    <input type="button" id="reset" value="Reset" />

    <h2>Live Message Ticker</h2>
    <div id="stockTicker">
        <div class="inner">
            <ul>
                <li class="loading">loading...</li>
            </ul>
        </div>
    </div>
</div>


